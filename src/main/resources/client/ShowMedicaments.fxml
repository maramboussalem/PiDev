<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.ShowMedicamentsController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <HBox alignment="CENTER" spacing="40">
        <VBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="medicamentImage" fitWidth="300" fitHeight="300" preserveRatio="true" />
        </VBox>

        <VBox spacing="15" style="-fx-padding: 0 0 0 20;">
            <Label fx:id="nameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label fx:id="descriptionLabel" style="-fx-font-size: 14px; -fx-wrap-text: true;" />
            <Label fx:id="priceLabel" style="-fx-font-size: 16px;" />
            <Label fx:id="quantityLabel" style="-fx-font-size: 16px;" />
            <Label fx:id="typeLabel" style="-fx-font-size: 16px;" />
            <Label fx:id="expiryLabel" style="-fx-font-size: 16px;" />
            <Label fx:id="fournisseurLabel" style="-fx-font-size: 16px;" />
        </VBox>
    </HBox>

    <Button text="Back" onAction="#handleBack" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" />
</VBox>