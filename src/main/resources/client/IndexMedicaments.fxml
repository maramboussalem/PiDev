<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefWidth="1200.0" prefHeight="800.0"
            maxWidth="Infinity" maxHeight="Infinity"
            style="-fx-background-color: #ffffff; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.IndexMedicaments">

    <top>
        <VBox style="-fx-background-color: #00b8bb; -fx-padding: 15;">
            <HBox alignment="CENTER" spacing="20">
                <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Liste des Medicaments" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15 0 0 0;">
                <TextField fx:id="searchField" promptText="Rechercher par nom..."
                           style="-fx-pref-width: 300; -fx-padding: 5; -fx-background-radius: 10;" />
                <ComboBox fx:id="sortComboBox" promptText="Trier par..."
                          style="-fx-pref-width: 200; -fx-background-radius: 10; -fx-background-color: #00b8bb;" />
                <ComboBox fx:id="filterComboBox" promptText="Filtrer par..."
                          style="-fx-pref-width: 200; -fx-background-radius: 10; -fx-background-color: #00b8bb;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="700.0"
                    style="-fx-background: transparent;">
            <FlowPane fx:id="cardsContainer"
                      alignment="TOP_CENTER"
                      hgap="20" vgap="20"
                      style="-fx-padding: 20; -fx-background-color: transparent;" />
        </ScrollPane>
    </center>
</BorderPane>
