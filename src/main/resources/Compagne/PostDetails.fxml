<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="521.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.Compagne.PostDetails">
    <children>
        <!-- Title Label -->
        <Label fx:id="titleLabel" layoutX="150.0" layoutY="20.0" prefHeight="30.0" prefWidth="300.0" text="Post Title" textAlignment="CENTER" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #00b8bb;" />

        <!-- Post Image -->
        <ImageView fx:id="imageView" fitHeight="248.0" fitWidth="507.0" layoutX="48.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-radius: 10px;" />

        <!-- Content Label -->
        <Label fx:id="contentLabel" layoutX="20.0" layoutY="330.0" prefHeight="150.0" prefWidth="560.0" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #333; -fx-font-family: 'Arial'; -fx-line-spacing: 5;" />


    </children>
</AnchorPane>
