<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="616.0" prefWidth="1007.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.IndexConsultation">
    <children>
        <!-- Card Background -->
        <AnchorPane layoutX="20.0" layoutY="20.0" prefHeight="660.0" prefWidth="1087.0" style="-fx-background-color: #ffffff; -fx-background-radius: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <!-- Title -->
                <Text fill="#00b8bb" layoutX="58.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Liste des consultations">
                    <font>
                        <Font name="Bell MT" size="33.0" />
                    </font>
                </Text>

                <!-- ListView of consultations -->
                <ListView fx:id="listview" layoutX="58.0" layoutY="80.0" prefHeight="490.0" prefWidth="970.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" />

                <!-- Add Consultation Button -->
                <Button fx:id="add" layoutX="780.0" layoutY="590.0" mnemonicParsing="false" onAction="#gotoadd" prefHeight="40.0" prefWidth="248.0" style="-fx-background-color: #00b8bb; -fx-background-radius: 10;" text="Ajouter une consultation" textFill="WHITE">
                    <font>
                        <Font name="Bell MT" size="18.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
