<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="203.0" prefWidth="274.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="tn.esprit.controllers.CompagnePublic.ItemController">
    <children>
        <VBox layoutX="39.0" layoutY="9.0" prefHeight="166.0" prefWidth="177.0" spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 5, 0.5, 0, 2);">
            <!-- Image with rounded corners -->
            <ImageView fx:id="img" fitHeight="141.0" fitWidth="176.0" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 5, 0.5, 0, 0);" />

            <!-- Title with bold font and added color -->
            <Label fx:id="title" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333333;" />

            <!-- Content label with added line spacing for clarity -->
            <Label fx:id="content" style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-line-spacing: 4;" />
        </VBox>
    </children>
</AnchorPane>
