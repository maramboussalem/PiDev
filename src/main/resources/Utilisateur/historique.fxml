<AnchorPane prefHeight="701.0" prefWidth="582.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.HistoriqueController">
    <children>
        <AnchorPane layoutX="14.0" layoutY="9.0" prefHeight="682.0" prefWidth="555.0" style="-fx-background-color: #ffffff; -fx-background-radius: 30;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <VBox alignment="CENTER" layoutX="28.0" layoutY="62.0" prefWidth="500.0" spacing="20">
                    <children>
                        <Text fill="#00b8bb" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Historique des activités">
                            <font>
                                <Font name="Bell MT" size="30.0" />
                            </font>
                        </Text>
                        <TableView fx:id="historyTable" prefHeight="450.0" prefWidth="500.0" style="-fx-background-radius: 10;">
                            <columns>
                                <TableColumn fx:id="timestampColumn" prefWidth="200.0" text="Date et Heure" />
                                <TableColumn fx:id="eventTypeColumn" prefWidth="300.0" text="Type d'événement" />
                            </columns>
                        </TableView>
                        <Button onAction="#closeWindow" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #00b8bb; -fx-background-radius: 10; -fx-text-fill: white;" text="Fermer">
                            <font>
                                <Font size="16.0" />
                            </font>
