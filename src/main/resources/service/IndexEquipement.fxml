<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.IndexEquipement"
      spacing="25" alignment="TOP_CENTER"
      style="-fx-padding: 40;
             -fx-background-color: linear-gradient(to bottom right, #e0ecff, #ffffff);
             -fx-border-radius: 20;
             -fx-background-radius: 20;">

    <Text text="🛠️  Gestion des Équipements"
          style="-fx-font-size: 28px;
                 -fx-font-family: 'Segoe UI Semibold';
                 -fx-fill: #1e3a8a;
                 -fx-effect: dropshadow(gaussian, #b3c5ff, 5, 0.3, 2, 2);" />

    <ListView fx:id="listViewEquipements" prefHeight="420" prefWidth="1100"
              style="-fx-background-color: white;
                     -fx-border-color: #cbd5e1;
                     -fx-border-width: 1.5;
                     -fx-border-radius: 12;
                     -fx-background-radius: 12;
                     -fx-effect: dropshadow(gaussian, #b3c5ff, 12, 0.4, 0, 4);" />

    <HBox spacing="25" alignment="CENTER">
        <Button text="🗑 Supprimer" onAction="#supprimerEquipement"
                style="-fx-background-color: #ef4444;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 12 26;
                       -fx-font-size: 15px;
                       -fx-font-family: 'Segoe UI';
                       -fx-background-radius: 12;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.2, 0, 3);" />
        <Button text="✏️ Modifier" onAction="#modifierEquipement"
                style="-fx-background-color: #3b82f6;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 12 26;
                       -fx-font-size: 15px;
                       -fx-font-family: 'Segoe UI';
                       -fx-background-radius: 12;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 6, 0.2, 0, 3);" />
    </HBox>

</VBox>
